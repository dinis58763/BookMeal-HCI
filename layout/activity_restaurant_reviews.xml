<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/main_black_grey"
    tools:context=".PhotoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="false"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text=" BACK"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_black_grey"
                android:color="@color/white"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Restaurante MarÃ©s Vivas"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Praceta Zite Duarte 50, Cascais"
                android:textColor="#FFFFFFFF"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rating_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/roboto_regular"
                android:text="0.0"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="50sp" />

            <com.marcinmoskala.arcseekbar.ArcSeekBar
                android:id="@+id/seekArc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp"
                android:padding="20dp"
                app:progressBackgroundColor="@color/sliderBack"
                app:progressBackgroundWidth="20dp"
                app:progress="100"
                app:progressWidth="20dp"
                app:roundEdges="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>