<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black_grey">

    <TextView
        android:id="@+id/dateChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:width="270dp"
        android:height="34dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="October 23rd 2022"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hourSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/clock_white"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="21:00"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateChoice" />


    <TextView
        android:id="@+id/ChooseSites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/chair_art"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text=" Seats Chosen"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumberOfPeople"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/NumberOfPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/people_art"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="6 People"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourSelected" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Choose The Menu"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseSites"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="28dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/chooseAtTheRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/button_edit_menu"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_choose_menu"
        android:gravity="fill_vertical"
        android:paddingLeft="15dp"
        android:text="CHOOSE MENU NOW"
        android:textColor="@color/main_black_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseAtTheRestaurant"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_black_grey"
        app:srcCompat="@drawable/ic_arrow_forward_black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/chooseAtTheRestaurant"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_choose_menu"
        android:gravity="fill_vertical"
        android:paddingLeft="15dp"
        android:text="AT RESTAURANT"
        android:textColor="@color/main_black_grey"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>