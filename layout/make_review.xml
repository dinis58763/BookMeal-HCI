<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5A6978">

    <Button
        android:id="@+id/addReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/add_review"
        android:lineSpacingMultiplier="0.38"
        android:text="Add Review"
        android:textColor="#FF343F4B"
        android:textSize="21sp"

        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/writeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/write_review"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textPersonName"
        android:lineSpacingMultiplier="1.3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"

        android:text="Review..."
        android:textColor="#FF969FAA"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <SeekBar
        android:id="@+id/seekBarNivelBarulho"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="32dp"
        android:progress="50"
        android:progressTint="#77D353"
        android:thumbTint="#77D353"
        app:layout_constraintBottom_toTopOf="@+id/writeReview"
        app:layout_constraintEnd_toStartOf="@+id/textView33"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarTempoDeEspera"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="64dp"
        android:progress="50"
        android:progressTint="#77D353"
        android:thumbTint="#77D353"
        app:layout_constraintBottom_toTopOf="@+id/seekBarNivelBarulho"
        app:layout_constraintEnd_toStartOf="@+id/textView32" />

    <SeekBar
        android:id="@+id/seekBarAtendimentoGeral"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="12dp"
        android:progress="50"
        android:progressTint="#77D353"
        android:thumbTint="#77D353"
        app:layout_constraintBottom_toTopOf="@+id/seekBarTempoDeEspera"
        app:layout_constraintEnd_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Restaurante Marés Vivas"

        android:textColor="#FFFFFFFF"
        android:textSize="30.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Praceta Zite Duarte 50, Cascais"
        android:textColor="#FFFFFFFF"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="25dp"
        android:text="Atendimento geral"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Tempo de espera"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:text="Nível de barulho"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />
</androidx.constraintlayout.widget.ConstraintLayout>