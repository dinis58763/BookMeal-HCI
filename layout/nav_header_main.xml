<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/side_nav_bar"
    android:backgroundTint="@color/main_black_grey"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/profile_modified" />

    <TextView
        android:id="@+id/et_nameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="John Rodrik Mikel"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/et_gmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jrodrimickel@gmail.com" />

</LinearLayout>