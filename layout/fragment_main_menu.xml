<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_black_grey"
    tools:context=".ui.MainMenuFragment"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/open_maps"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                android:background="@drawable/btn_restaurant"
                android:backgroundTint="@android:color/white"
                android:text="OPEN MAP"
                android:textColor="@color/main_black_grey"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:gravity="fill_vertical"
                app:backgroundTint="@null" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISCOVER THE BEST RESTAURANTS AROUND"
            android:layout_marginTop="30dp"
            android:textColor="@color/main"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LISBON"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            />

            <LinearLayout
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/restaurant_main"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                app:backgroundTint="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nearby_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEARBY"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/more_text1"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="190dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:padding="0dp"
                        android:text="MORE"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/rest_1"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_restaurant"
                    android:backgroundTint="@android:color/white"
                    android:text="Restaurante Coutada"
                    android:textColor="@color/main_black_grey"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                    android:gravity="fill_vertical"

                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/rest_2"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_restaurant"
                    android:text="SebastiÃ£o"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_black_grey"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                app:backgroundTint="@null"
                android:background="@drawable/restaurant_main"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/best_offers"
                        android:text="BEST OFFERS"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="140dp"
                        android:id="@+id/more_text2"
                        android:text="MORE"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:backgroundTint="@android:color/transparent"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/rest_3"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_restaurant"
                    android:text="Masala Kraft"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_black_grey"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    />
                <Button
                    android:id="@+id/rest_4"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_restaurant"
                    android:text="NoTalho Lisboa"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_black_grey"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                app:backgroundTint="@null"
                android:background="@drawable/restaurant_main"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/best_rated"
                        android:text="BEST RATED"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="150dp"
                        android:id="@+id/more_text3"
                        android:text="MORE"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:backgroundTint="@android:color/transparent"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/rest_5"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_restaurant"
                    android:text="Restaurante O Nobre"
                    android:gravity="fill_vertical"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_black_grey"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>