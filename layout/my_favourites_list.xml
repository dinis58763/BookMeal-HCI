<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_black_grey"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/rest_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_restaurant_menu_24"
        android:text="Restaurant"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
        android:gravity="fill_vertical"
        android:textSize="18dp"
        android:textColor="@color/main_black_grey"
        android:background="@drawable/my_favourites_buttons"/>

</LinearLayout>