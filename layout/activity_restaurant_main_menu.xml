<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_black_grey"
    tools:context=".NumberOfPeopleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="BACK"
                    android:background="@android:color/transparent"
                    android:bottomLeftRadius="20dp"
                    android:bottomRightRadius="20dp"
                    android:color="@color/white"
                    android:drawableLeft="@drawable/ic_arrow_back" />

                <Button
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/back"
                    android:color="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Restaurante"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avenida Sacadura Cabral 53B, 1000-080 Lisboa"
                android:textSize="17sp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:textColor="@color/white"
                android:theme="@style/Theme.AppCompat.DayNight"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btn_photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                android:text="RESTAURANT'S PHOTOS"
                android:textAlignment="center"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/main_black_grey"
                android:background="@drawable/btn_custom_white"
                />

            <TextView
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.1"
                android:textSize="45sp"
                android:textColor="@color/green"
                android:fontFamily="@font/raleway"
                android:textAlignment="center"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/reviews2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.533 Reviews"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:layout_marginBottom="2dp"/>

            <Button
                android:id="@+id/btn_add_review_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                android:text="RESTAURANT'S REVIEWS"
                android:textAlignment="center"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/main_black_grey"
                android:background="@drawable/btn_custom_white"
                />

            <TextView
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/averagePrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/back"
                android:textAlignment="center"
                android:width="50dp"
                android:height="50dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:color="@color/white"
                android:drawableTop="@drawable/ic_baseline_money_24"
                android:onClick="sendMessageToRegister"
                android:text="AVERAGE PRICE 25Â£"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />

            <TextView
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:onClick="sendMessageToRegister"
                android:text="MENU"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/menuPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:drawableLeft="@drawable/ic_baseline_no_drinks_24"
                android:onClick="sendMessageToRegister"
                android:text=" No drinks included"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/menuPrice3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:drawableLeft="@drawable/ic_baseline_coffee_24"
                android:onClick="sendMessageToRegister"
                android:text=" Coffee included"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                android:text="RESTAURANT'S FULL MENU"
                android:textAlignment="center"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/main_black_grey"
                android:background="@drawable/btn_custom_white"
                />

            <TextView
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/JJmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:onClick="sendMessageToRegister"
                android:text="USEFUL INFORMATION"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/meDnuPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:onClick="sendMessageToRegister"
                android:text=" OPENING HOURS"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/menDuPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/back"
                android:color="@color/white"
                android:drawableLeft="@drawable/ic_baseline_account_balance_24"
                android:onClick="sendMessageToRegister"
                android:text=" ACCEPTS CREDIT CARDS"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/usefullInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
                android:text="MORE USEFUL INFO"
                android:textAlignment="center"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/main_black_grey"
                android:background="@drawable/btn_custom_white"
                />

            <Button
                android:id="@+id/bookATable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="BOOK A TABLE"
                android:backgroundTint="@color/green"
                android:textAlignment="center"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:background="@drawable/btn_custom_white"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
